<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
<TextView
    android:id="@+id/title_needed_product"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:text="Detalles de Productos Faltantes para realizar la orden"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="20dp"
    android:textAlignment="center"
    />

    <TextView
        android:id="@+id/txv_order_id_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id de orden:"
        android:layout_below="@id/title_needed_product"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/txv_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="234"
        android:layout_below="@id/title_needed_product"
        android:layout_toRightOf="@id/txv_order_id_"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/txv_order_customer_fN_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente:"
        android:layout_below="@id/title_needed_product"
        android:layout_toRightOf="@id/txv_order_id"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/txv_order_customer_fN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Madera, AarÃ³n"
        android:layout_below="@id/title_needed_product"
        android:layout_toRightOf="@id/txv_order_customer_fN_"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/txv_order_status_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado de Orden:"
        android:layout_below="@id/txv_order_customer_fN"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/txv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="PENDIENTE"
        android:layout_below="@id/txv_order_customer_fN"
        android:layout_toRightOf="@id/txv_order_status_"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        />

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/needed_products_recycler_view"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height = "wrap_content"

        android:layout_below="@id/txv_order_status"
        tools:context="com.fiuady.android.compustorevv10.ReportSimulatorNeededProductsActivity"
        >
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>