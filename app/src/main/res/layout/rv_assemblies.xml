<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tagAssemblyId_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:text="Assembly id: " />

    <TextView
        android:id="@+id/txtAssembly_Id_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tagAssemblyId_a"
        android:layout_toEndOf="@+id/tagAssemblyId_a"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtAssemblyPrice_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp"
        android:text="TextView"
        android:layout_alignTop="@+id/txtAssembly_Id_a"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tagAssemblyPrice_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $"
        android:layout_alignBaseline="@+id/txtAssemblyPrice_a"
        android:layout_alignBottom="@+id/txtAssemblyPrice_a"
        android:layout_toStartOf="@+id/txtAssemblyPrice_a" />
</RelativeLayout>