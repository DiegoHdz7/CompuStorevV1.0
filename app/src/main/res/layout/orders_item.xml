<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="6dp"
        android:elevation="6dp"
        >
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <!--style="?android:listSeparatorTextViewStyle"!-->
            <ImageView
                android:id="@+id/order_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_order"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/orderNumber_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_View"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Order Id: "
                android:textStyle="bold"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/orderNumber_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:text="Order Id"
                android:layout_toRightOf="@id/orderNumber_text"
                android:layout_alignTop="@id/orderNumber_text"
                android:textStyle="normal"
                android:textSize="16dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="6dp"

                android:textAppearance="?android:textAppearanceLarge"
                style="@style/Base.Theme.AppCompat.Light.Dialog"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@color/accent_material_light" />
            <TextView
                android:id="@+id/costumer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderNumber_text"
                android:layout_toRightOf="@id/order_View"
                android:layout_alignTop="@id/orderNumber_text"
                android:layout_alignLeft="@id/orderNumber_text"
                android:text="Customer: "
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/costumer_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:text="Customer"
                android:layout_toRightOf="@id/costumer_text"
                android:layout_alignBottom="@id/costumer_text"
                android:layout_marginTop="20dp"
                android:textStyle="normal"
                android:textSize="16dp"


                android:textAppearance="?android:textAppearanceLarge"
                style="@style/Base.Theme.AppCompat.Light.Dialog"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@color/accent_material_light" />
            <TextView
                android:id="@+id/statusOrder_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_View"
                android:layout_below="@id/costumer_text"
                android:text="Status: "
                android:textStyle="bold"
                android:layout_alignTop="@id/costumer_text"
                android:layout_alignStart="@id/costumer_text"
                android:layout_marginTop="20dp"
                android:textSize="16dp"

                />
            <TextView
                android:id="@+id/statusOrder_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:text="Status"
                android:layout_below="@id/costumer_text"
                android:layout_toRightOf="@id/statusOrder_text"
                android:layout_marginLeft="4dp"
                android:layout_alignTop="@id/statusOrder_text"
                android:layout_centerVertical="true"
                android:textStyle="normal"
                android:textSize="16dp"

                android:textAppearance="?android:textAppearanceLarge"
                style="@style/Base.Theme.AppCompat.Light.Dialog"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@color/accent_material_light" />
            <TextView
                android:id="@+id/orderDate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_View"
                android:layout_below="@id/statusOrder_text"
                android:text="Order Date: "
                android:textStyle="bold"
                android:layout_alignTop="@id/statusOrder_text"
                android:layout_alignStart="@id/statusOrder_text"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:layout_marginBottom="18dp"

                />
            <TextView
                android:id="@+id/orderDate_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:text="Order Date"
                android:layout_below="@id/statusOrder_text"
                android:layout_toRightOf="@id/orderDate_text"


                android:layout_centerVertical="true"
                android:textStyle="normal"
                android:textSize="16dp"

                android:textAppearance="?android:textAppearanceLarge"
                style="@style/Base.Theme.AppCompat.Light.Dialog"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@color/accent_material_light" />
            <ImageView
                android:id="@+id/orderOption_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/statusOrder_description"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"

                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>